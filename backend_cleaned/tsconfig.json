{ 
  "compilerOptions": { 
    "target": "esnext", 
    "module": "commonjs", 
    "moduleResolution": "node", 
    "rootDir": "./src", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "noUncheckedIndexedAccess": true, 
    "exactOptionalPropertyTypes": true, 
    "isolatedModules": false
  }, 
  "include": ["src"] 
} 